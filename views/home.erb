<% content_for :header do %>
<div id="header">
		<h1>
		The Best Of
		</h1>
		<h3> The freshest links from the best folks out there.</h3>
	</div>
<% end %>

<% @filtered_data.each do |a| %>
<div class="article">
	<h3><%= a[0] %></h3>
	<a class="handle" href="http://twitter.com/<%= a[1] %>">@<%= a[1] %></a>
<p class="rt"><%= a[3] %> Retweets</p>
</div>
<% end %>
