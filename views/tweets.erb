<% if @filtered_data.empty? %>
<p>Nothing to see here, folks. </p>
<% else %>
<% @filtered_data.each do |a| %>
<div class  = "article <%= rt_class_setter(a[3]) %>">
	<div class = "photo"><img src="<%= a[4] %>" alt="" width="48" height="48" border="0" /></div>
	<div class = "contents">	<p class = "user"><a class="handle" href="http://twitter.com/<%= a[1] %>"><%= a[1] %> </a><span class ="name"><%= a[2] %></p>
		<p class = "text"><%= a[0] %></p>
		<p class  = "rt"><%= rt_count(a[3]) %></p>
	</div>	
</div>
<% end %>
<% end %>
